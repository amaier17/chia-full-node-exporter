[Unit]
Description=Chia Full Node Exporter Service
After=remote-fs.target network-online.target
Wants=network-online.target

[Service]
Restart=always
RestartSec=1

ExecStart=/usr/bin/env PATH=CHIA_PATH/venv/bin:$PATH python3 EXPORTER_PATH/chia-exporter.py -p FULLNODE -w WALLET -a HARVESTER -r FARMER -p PORT
User=CHIA_USER
Group=CHIA_GROUP

[Install]
WantedBy=multi-user.target
